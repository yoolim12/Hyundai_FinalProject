<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 
 /* 
 * 작성자 : 문혁
 * [파일 추가, 삭제, 조회] 쿼리
 */
  -->
<mapper namespace="com.hyundai.project.dao.BoardAttachDAO">

	<insert id="insert" parameterType="BoardAttachDTO" >
		insert into board_attach(uuid, folderpath, filename, bno)
		values(#{uuid}, #{folderPath}, #{fileName}, #{bno} )
	</insert>

	<delete id="delete">
		DELETE from board_attach where bno = #{bno}
	</delete>

	<select id="findByBno" resultType = "com.hyundai.project.dto.BoardAttachDTO">
		select * from board_attach where bno = #{bno}
	</select>

</mapper>
